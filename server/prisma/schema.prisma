// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  username String @unique @db.VarChar(70)
  password String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  Room    Room[]
  message Message[]
  session Session[]
}

model Room {
  id      String  @id @default(cuid())
  name    String? @db.VarChar(50)
  redisId String  @unique @db.VarChar(25)

  members User[]
  msgs    Message[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Message {
  id      String @id @default(cuid())
  msg     String
  redisId String @unique @db.VarChar(25)

  creater User   @relation(fields: [userId], references: [id])
  userId  String

  msgReply Message? @relation("REPLY", fields: [msgId], references: [id])
  msgId    String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  message Message[] @relation("REPLY")
  Room    Room?     @relation(fields: [roomId], references: [id])
  roomId  String?
}

model Session {
  id String @id @default(cuid())

  userIp    String  @db.VarChar(50)
  userAgent String
  valid     Boolean @default(true)

  user   User   @relation(fields: [userId], references: [id])
  userId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
